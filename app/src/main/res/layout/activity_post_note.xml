<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thomaslpedersen.miniproject.PostNoteActivity">

    <TextView
        android:id="@+id/DisplayPostText"
        android:layout_width="308dp"
        android:layout_height="166dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="PostText"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="36sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037" />

    <TextView
        android:id="@+id/colorText"
        android:layout_width="299dp"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="61dp"
        android:text="Pick a color for the note:"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DisplayPostText" />

    <Button
        android:id="@+id/redButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="123dp"
        android:layout_height="69dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="23dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="RED"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colorText" />

    <Button
        android:id="@+id/blueButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="125dp"
        android:layout_height="70dp"
        android:layout_marginRight="56dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="BLUE"
        app:layout_constraintBaseline_toBaselineOf="@+id/redButton"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/greenButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="125dp"
        android:layout_height="71dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="GREEN"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/redButton" />

    <Button
        android:id="@+id/yellowButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="125dp"
        android:layout_height="69dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="YELLOW"
        android:layout_marginRight="56dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/greenButton" />
</android.support.constraint.ConstraintLayout>
